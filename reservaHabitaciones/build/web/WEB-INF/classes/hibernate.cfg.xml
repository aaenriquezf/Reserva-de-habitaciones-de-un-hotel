<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/dbHotel?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">1234</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <mapping resource="sys/model/Tbestado.hbm.xml"/>
    <mapping resource="sys/model/Tbdepartamento.hbm.xml"/>
    <mapping resource="sys/model/Tbempleado.hbm.xml"/>
    <mapping resource="sys/model/Tbhabitacion.hbm.xml"/>
    <mapping resource="sys/model/Tbreserva.hbm.xml"/>
    <mapping resource="sys/model/Tbcliente.hbm.xml"/>
    <mapping resource="sys/model/Tbprovincia.hbm.xml"/>
    <mapping resource="sys/model/Tbusuario.hbm.xml"/>
    <mapping resource="sys/model/Tbhotel.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
